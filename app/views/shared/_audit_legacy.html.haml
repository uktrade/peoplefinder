.grid-row.audit-log
  .column-full
    %h3.heading-medium
      = "Audit Log"
    %table.audit
      %thead
        %tr
          %th{ style: '' }
            = "Event at"
          %th
            = "By"
          %th
            = "Change"
      %tbody
        - versions.reverse.each do |v|
          %tr
            %td
              = v.created_at.strftime("%F")
            -if v.whodunnit.is_a?(Person)
              %td
                = link_to v.whodunnit.to_s, v.whodunnit
            - else
              %td
                = v.whodunnit || "Not available"
            %td
              %ul
                - v.changes.each do |field, value|
                  %li
                    = succeed ':' do
                      %strong<
                        = field
                    = value
